    var show="";
    show+="주문 받습니다!!!\n";
    show+="1. 짜장면, 2. 짬뽕, 3. 탕수육\n ";    
    alert(show);
    
    var oderStr="";
    // oderStr에 "Q"가 입력될 때까지 반복한다!
    var oderList=[];
    var idx=0;
    while( oderStr!="Q"){
        show="주문하실 번호를 입력하세요!!(1~3)\n";
        show+="종료하실려면 Q를 입력하세요!!\n";
        oderStr = prompt(show,"1");
        if( oderStr!="Q"){
            var orderNumber=parseInt( oderStr );
            var orderMenu=["짜장면","짬뽕","탕수육"];
            // 주문 list의 배열로 할당..
            oderList[ idx++ ]=orderMenu[orderNumber-1];
        }
    }
    alert("주문하신 메뉴는 "+oderList+"입니다!");
