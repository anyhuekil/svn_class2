print(ar)
for idx in range(10) :
    ar[idx]=idx
print(ar)    
## 1,3, 5, 7행만 선택..
br = ar[[1,3,5,7]]
print("1,3,5,7행선택",br)
## [0,3] [1,4] 만 선택..
cr = ar[[0,3],[1,4]]
print("선택처리", cr)
print(ar)
