function chgSome(){
	// body 태그의 바로 밑에 있는 객체들..
	$("body > *").css("color","red");
}
function chgAttr(){
	// $("요소[속성=속성값]").val("데이터 할당");
	$("input[name='id01']").val("비가 올 듯 말듯!! 기분이 좋을 듯 말듯..");
	// $("요소[속성!=속성값]") : 해당 객체가 아닌 것에 value값을 8888로 입력처리
	$("input[type!='password']").val("8888");

}
function filterFun(){
	alert("성별에 대한 처리 확인!!");
	// name값으로 gender이 있는 것중에..
	alert("성별은?"+$("input[name='gender']:checked").val());
}
